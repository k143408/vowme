<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_layout_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="8.0dip">

    <com.vowme.app.utilities.customWidgets.CustomSpinnerTextView
        android:id="@+id/spinner_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:cursorVisible="true"
        android:drawableRight="@drawable/ic_arrow_drop_down_24dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:imeOptions="actionNext"
        android:textColor="@color/backgroundBottomBarColor"
        android:textColorHint="@color/backgroundBottomBarColor"
        android:textIsSelectable="false"
        android:textSize="@dimen/basic_text" />
</android.support.design.widget.TextInputLayout>