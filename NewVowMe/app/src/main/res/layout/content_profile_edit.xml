<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:divider="?android:listDivider"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/perso_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="16.0dip"
            android:text="Personal details"
            android:textColor="@color/sec_icon_light"
            android:textSize="@dimen/subtitle" />

        <TextView
            android:id="@+id/act_basic_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Basic info"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/act_personal_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Personal info"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/commitment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="16.0dip"
            android:text="Commitment"
            android:textColor="@color/sec_icon_light"
            android:textSize="@dimen/subtitle" />

        <TextView
            android:id="@+id/act_commitment_types"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Commitment types"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/act_volunteering_avaibility"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Volunteering avaibility"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/act_location_preferences"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Location preferences"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/act_volunteering_suitability"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Volunteering suitability"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/causes_interests"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="16.0dip"
            android:text="Causes &amp; Interests"
            android:textColor="@color/sec_icon_light"
            android:textSize="@dimen/subtitle" />

        <TextView
            android:id="@+id/act_causes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Causes"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/act_interests"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Interests"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/skills_experience"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="16.0dip"
            android:text="Skills &amp; Experience"
            android:textColor="@color/sec_icon_light"
            android:textSize="@dimen/subtitle" />

        <TextView
            android:id="@+id/act_skills_hobbies"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Personal skills, Hobbies and Languages"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/act_licences_certificates"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Licences and Certificates"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/act_professional_skills"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Professional skills"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/act_experience"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Experience"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />
    </LinearLayout>
</LinearLayout>