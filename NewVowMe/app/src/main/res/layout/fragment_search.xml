<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:divider="?android:dividerVertical"
    android:orientation="vertical"
    android:showDividers="middle">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="1">

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="goToOppNearMe">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/loca_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="8.0dip"
                    android:src="@drawable/ic_location_on_24dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16.0dip"
                    android:paddingRight="16.0dip"
                    android:paddingTop="16.0dip"
                    android:text="Search new opportunities near me"
                    android:textColor="@color/sec_icon_light"
                    android:textSize="@dimen/subtitle" />
            </LinearLayout>

            <ImageView
                android:id="@+id/foward_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:src="@drawable/ic_arrow_forward_24dp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="125.0dip"
        android:lineSpacingExtra="@dimen/line_spacing"
        android:paddingLeft="30.0dip"
        android:paddingRight="30.0dip"
        android:password="false"
        android:text="@string/search_fragment_text"
        android:textColor="@color/sec_icon_light"
        android:textSize="@dimen/basic_text" />
</LinearLayout>