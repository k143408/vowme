<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:divider="?android:listDivider"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:id="@+id/layout_settings_authenticated"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/act_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="16.0dip"
            android:text="Account"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/act_notifications"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Email Notifications"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/notification_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Off"
            android:textColor="@color/sec_icon_light"
            android:textSize="@dimen/subtitle" />

        <TextView
            android:id="@+id/act_push_notifications"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Push Notifications"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/push_notification_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Off"
            android:textColor="@color/sec_icon_light"
            android:textSize="@dimen/subtitle" />

        <TextView
            android:id="@+id/act_profile_privacy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Profile Privacy"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/privacy_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Private"
            android:textColor="@color/sec_icon_light"
            android:textSize="@dimen/subtitle"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/act_help"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="16.0dip"
            android:text="Help Articles"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/act_report_problem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Report a Problem"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/act_privacy_statment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="16.0dip"
            android:text="Privacy Statment"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/act_terms_use"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Terms of Use"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/version"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Version"
            android:textColor="@color/text_light"
            android:textSize="@dimen/basic_text" />

        <TextView
            android:id="@+id/version_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="1.0.0"
            android:textColor="@color/sec_icon_light"
            android:textSize="@dimen/subtitle" />
    </LinearLayout>
</LinearLayout>